<Window x:Class="B1Task_2.FileGridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:B1Task_2"
        mc:Ignorable="d"
        Title="FileGridWindow" Height="800" Width="450">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <Button x:Name="BtnBack" Content="Назад" Click="BtnBack_OnClick" Height="20" Width="60"/>
                <DataGrid x:Name="fileGrid" AutoGenerateColumns="True">
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

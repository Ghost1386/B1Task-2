<Window x:Class="B1Task_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B1Task_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <StackPanel Height="300" Width="200">
        <Button x:Name="BtnOpenFile" Width="120" Height="40" Click="BtnOpenFile_OnClick" HorizontalAlignment="Center" Margin="0,20,0,0">Считать данные</Button>
        <Button x:Name="BtnDataList" Width="130" Height="40" Click="BtnDataList_OnClick" HorizontalAlignment="Center" Margin="0,70,0,0">Просмотреть данные</Button>
        <Button x:Name="BtnFileList" Width="120" Height="40" Click="BtnFileList_OnClick" HorizontalAlignment="Center" Margin="0,60,0,0">Просмотреть файлы</Button>
    </StackPanel>
</Window>
